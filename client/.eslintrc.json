{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-react": 0,
    "import/no-unresolved": 0,
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
    "prettier/prettier": [
      "error",

      {
        "singleQuote": false,
        "parser": "flow",
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ]
  }
}


